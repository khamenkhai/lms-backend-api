// This is your Prisma schema file for NeonDB (PostgreSQL)
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Template {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @default("")

  @@map("categories")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String

  @@map("users")
}

